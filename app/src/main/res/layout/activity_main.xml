<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/inputRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="260dp">

        <Spinner
            android:id="@+id/weightSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_spinner"
            android:paddingLeft="10dp"
            android:entries="@array/weight_array"
            />

        <Spinner
            android:id="@+id/heightSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weightSpinner"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_spinner"
            android:paddingLeft="10dp"
            android:entries="@array/height_array"
            />

        <EditText
            android:id="@+id/etWeight"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/weightSpinner"
            android:background="@drawable/custom_input"
            android:hint="60"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:focusableInTouchMode="false"/>

        <EditText
            android:id="@+id/etHeight"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/etWeight"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/weightSpinner"
            android:background="@drawable/custom_input"
            android:hint="170"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:focusableInTouchMode="false"/>

        <SeekBar
            android:id="@+id/sbResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/heightSpinner"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/bmiResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sbResult"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:hint="Result"
            />
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sbResult"
            android:textSize="20sp"
            android:layout_toRightOf="@id/bmiResult"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="#2971CD"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/inputRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:background="@drawable/customize_button"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/seven"
            android:text="8"
            android:background="@drawable/customize_button"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/eight"
            android:text="9"
            android:background="@drawable/customize_button"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seven"
            android:text="4"
            android:background="@drawable/customize_button"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eight"
            android:layout_toRightOf="@id/four"
            android:text="5"
            android:background="@drawable/customize_button"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nine"
            android:layout_toRightOf="@id/five"
            android:text="6"
            android:background="@drawable/customize_button"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/four"
            android:text="1"
            android:background="@drawable/customize_button"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/five"
            android:layout_toRightOf="@id/one"
            android:text="2"
            android:background="@drawable/customize_button"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/six"
            android:layout_toRightOf="@id/two"
            android:text="3"
            android:background="@drawable/customize_button"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/nine"
            android:background="@drawable/custom_submit"
            android:text="AC"
            android:textColor="#7204C5"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            />

        <Button
            android:id="@+id/del"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ac"
            android:layout_toRightOf="@id/six"
            android:background="@drawable/custom_submit"
            android:text="DEL"
            android:layout_marginRight="20dp"
            android:textColor="#7204C5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/go"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/del"
            android:layout_toRightOf="@id/three"
            android:background="@drawable/custom_submit"
            android:text="Go"
            android:textColor="#7204C5"
            android:textSize="20sp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/two"
            android:layout_marginLeft="100dp"
            android:background="@drawable/customize_button"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:id="@+id/decimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/three"
            android:layout_toRightOf="@id/zero"
            android:background="@drawable/customize_button"
            android:text="."
            android:textSize="30sp" />


    </RelativeLayout>
</RelativeLayout>